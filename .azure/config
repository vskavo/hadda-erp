[defaults]
# Configuración para Azure App Service

# Habilitar el build en Azure
SCM_DO_BUILD_DURING_DEPLOYMENT=true

# Configuración de Node.js
WEBSITE_NODE_DEFAULT_VERSION=18.x

# No comprimir node_modules durante deployment
COMPRESS_NODE_MODULES=false

# Usar npm ci en lugar de npm install para instalaciones más rápidas
NPM_USE_CI=true

# Tiempo máximo para operaciones SCM (en segundos)
SCM_COMMAND_IDLE_TIMEOUT=3600

# Habilitar logging para debugging
SCM_TRACE_LEVEL=4

# No incluir source maps en producción (opcional)
GENERATE_SOURCEMAP=false

# Variables de ambiente de Node
NODE_ENV=production


